<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlActivated">

    <TextView
        android:id="@+id/tv_EditarTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="169dp"
        android:text="@string/editar_Tarea"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_EditarTarea"
        tools:ignore="MissingConstraints">

        <fragment
            android:id="@+id/tercer_fragment"
            android:name="com.example.trasstarea2.fragmentos.Datos_Tercer_Fragmento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">


        </fragment>

        <fragment
            android:id="@+id/cuarto_fragment"
            android:name="com.example.trasstarea2.fragmentos.Datos_Cuarto_Fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">


        </fragment>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>